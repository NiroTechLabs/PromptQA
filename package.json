{
  "name": "promptqa",
  "version": "0.1.0",
  "description": "Prompt-driven web app test runner. Generate browser tests from natural language, execute with Playwright, evaluate with LLM.",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "bin": {
    "promptqa": "./dist/cli/main.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "prompts"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/cli/main.js",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist"
  },
  "keywords": [
    "testing",
    "playwright",
    "llm",
    "cli",
    "qa",
    "automation",
    "prompt"
  ],
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "commander": "^13.1.0",
    "dotenv": "^16.4.7",
    "nanoid": "^5.1.2",
    "playwright": "^1.50.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "rimraf": "^6.0.1",
    "typescript": "^5.7.3"
  }
}
